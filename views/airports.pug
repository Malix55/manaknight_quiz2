          names.forEach(function(airport) {
            $('#dropdown ul').append('<li><a href="#">' + airport.name + '</a></li>');
          });
        } else {
          $('#dropdown ul').append('<li><a href="#">No results found</a></li>');
        }
      },
      error: function() {
        $('#dropdown ul').empty();
        $('#dropdown ul').append('<li><a href="#">An error occurred</a></li>');
      },
    });
  }

  // Show the dropdown list when the input field is focused
  $('#search').focus(function() {
    $('#dropdown').addClass('show');
  });

  // Hide the dropdown list when the input field is blurred
  $('#search').blur(function() {
    $('#dropdown').removeClass('show');
  });

  // Update the value of the input field when an item in the dropdown list is clicked
  $('#dropdown ul').on('click', 'li', function() {
    $('#search').val($(this).text());
    $('#dropdown').removeClass('show');
  });

