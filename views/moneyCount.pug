doctype html
html
  head
    title Coin Widget
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js')
  body
    .container
      .row
      .mt-4
        form(method="post" action="/calculate" class="form-inline")
          .form-group
            input(type="text" name="amount" placeholder="Enter money amount" class="form-control")
          button(type="submit" class="btn btn-primary") Calculate
      .row
        h1(class="mt-4") Results
        
        ul.mt-4
          li $20 bills: #{numTwentyDollarBills}
          li $10 bills: #{numTenDollarBills}
          li $5 bills: #{numFiveDollarBills}
          li $1 bills: #{numOneDollarBills}
          li $0.25 coins: #{numTwentyFiveCentCoins}
          li $0.10 coins: #{numTenCentCoins}
          li $0.05 coins: #{numFiveCentCoins}
          li $0.01 coins: #{numOneCentCoins}
